<%= form_tag(@user) do %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
		</div>
  <% end %>

	<div class="actions">
		<%= label_tag :username %>
		<%= text_field_tag 'user[:username]', nil, placeholder: 'between 6-8 characters' %>

		<%= label_tag :name %>
		<%= text_field_tag 'user[:name]', nil, placeholder: 'Group or Artist name' %>

		<%= label_tag :password %>
		<%= password_field_tag 'user[:password]', nil, placeholder: 'Enter a password' %>

		<%= label_tag :confirm_password %>
		<%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm your password' %>

		<%= label_tag :email %>
		<%= text_field_tag 'user[:email]' %>

		<%= label_tag :bio %>
		<%= text_area_tag 'user[:bio]', nil, placeholder: 'Enter a short bio'%>

		<%= label_tag :genres %>
		<%= text_field_tag 'user[:genres]', nil, placeholder: 'rock, blues, jazz, ...' %>

		<%= label_tag :image, 'Upload a profile picture:'  %>

    <%= submit_tag 'Submit'  %>
  </div>
<% end %>
