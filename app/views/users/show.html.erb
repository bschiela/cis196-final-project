<div class="container">
	<br/>
	<p id="notice"><font color=green><%= notice %></font></p>
</div>

<div class="row">
	<div class="image">
		<%= image_tag @user.image.url %>
	</div>
	<div class="content">
		<h2><%= @user.name %></h2>
		<h5><%= @user.genres %></h5>
		<p><%= @user.bio %></p>
		<% if @user == current_user %>
		<div class="row">
			<%= link_to 'Edit', edit_user_path(@user), class: :button %>
			<%= button_to 'Delete My Profile', @user, { method: :delete, data: { confirm: 'Are you sure?' } } %>
		</div>
		<% end %>
	</div>
</div>

<% if @user == current_user %>
<div class="row">
	<%= button_to 'New Sound', new_user_sound_path(@user), method: :get %>
	<%= button_to 'New Playlist', '#', method: :get %>
	<%= button_to 'New Event', '#', method: :get %>
	<%= button_to 'New Story', '#', method: :get %>
</div>
<% end %>

<div class="row">
	<%= button_to 'Sounds', user_sounds_path(@user), { method: :get, class: :'button special' } %>
	<%= button_to 'Playlists', '#', { method: :get, class: :'button special' } %>
	<%= button_to 'Calendar', '#', { method: :get, class: :'button special' } %>
	<%= button_to 'News', '#', { method: :get, class: :'button special' } %>
</div>

<% if (defined? content) %>
	<div class="container">
		<%= render content %>
	</div>
<% end %>
